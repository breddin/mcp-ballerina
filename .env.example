# Ballerina MCP Server Configuration

# Server Settings
MCP_PORT=3000
MCP_HOST=localhost
MCP_TRANSPORT=websocket

# Ballerina Configuration
BAL_HOME=/usr/local/ballerina
JAVA_HOME=/usr/lib/jvm/java-17-openjdk

# Logging
LOG_LEVEL=info

# Performance
MAX_CONNECTIONS=100
REQUEST_TIMEOUT=30000

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=60000
CACHE_MAX_SIZE=1000

# Development
NODE_ENV=development