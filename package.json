{
  "name": "ballerina-mcp-server",
  "version": "0.1.0",
  "description": "Model Context Protocol server for Ballerina programming language",
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "tsx watch src/server/index.ts",
    "build": "tsc",
    "start": "node dist/server/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts tests/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "mcp",
    "ballerina",
    "language-server",
    "protocol"
  ],
  "author": "Claude Flow SPARC",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/breddin/mcp-ballerina.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "ws": "^8.16.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4",
    "execa": "^8.0.1",
    "dotenv": "^16.3.1",
    "@iarna/toml": "^2.2.5",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/ws": "^8.5.10",
    "@types/jest": "^29.5.11",
    "@types/node-fetch": "^2.6.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "nodemon": "^3.0.2"
  }
}